#!/usr/bin/sh

datetime=$( date +%Y%m%d%H%M%S )

# qrencodesrc=text=www.ffmpeg.org

# desktop cam mic

ffmpeg \
 -t 10 -s 1280x720 \
 -f x11grab -i :0.0 \
 -f v4l2 -i /dev/video0 \
 -f alsa -ac 2 -i hw:0 \
 -filter_complex '[0]scale=1280:720[a0];[1]scale=128:72[b1];[b1]pad=1280:720:1140:640:0x00000000[a1];[a0][a1]overlay' \
 "/media/${USER}/bdd1dc97-238a-4f44-b1ac-90363bfd5d11/Videos/Youtube/v${datetime}.mkv"
